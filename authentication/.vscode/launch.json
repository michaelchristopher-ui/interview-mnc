{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run FastAPI: Uvicorn (src/main.py)",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "src.main:app",
        "--host", "0.0.0.0",
        "--port", "8000",
        "--reload"
      ],
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      },
      "justMyCode": false,
      "cwd": "${workspaceFolder}"
    }
  ]
}
